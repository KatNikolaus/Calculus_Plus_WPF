<Window x:Class="Calculus_Plus_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculus_Plus_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="270">
    <Grid Margin="0,0,25,29">
        <Button Content="Calculate" HorizontalAlignment="Left" Margin="20,64,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBox HorizontalAlignment="Left" Margin="20,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="225" TextChanged="TextBox_TextChanged"/>
        <Button Content="Reset" HorizontalAlignment="Left" Margin="105,64,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
        <Button Content="Quit" HorizontalAlignment="Left" Margin="180,64,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
